<%= link_to "New Account Entry", new_account_entry_path %>

<% if signed_in? %>
  <%= current_user.email %>
  <%= link_to "Sign out", sign_out_path, :method => :delete %>
<% end %>

<h1>Balance: <%= number_with_precision(@sum, :precision => 2) %></h1>
<ul>
<% @account_entries.each do |entry| %>
  <li><%= entry.description %> <%= number_with_precision(entry.amount, :precision => 2) %></li>
<% end %>
</ul>